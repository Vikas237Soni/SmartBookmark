{
  "manifest_version": 3,
  "name": "Smart Bookmarks",
  "version": "1.0",
  "description": "A smart bookmarking tool with AI-enhanced features.",
  "action": {
    "default_popup": "popup.html",
    "default_icon": "assets/icon.png",
    "default_title": "Bookmark Trigger"
  },
  "permissions": [
    "bookmarks",
    "storage",
    "tabs",
    "activeTab",
    "aiLanguageModelOriginTrial",
    "scripting"
  ],
  "icons": {
    "128": "assets/icon.png"
  },
  "background": {
    "service_worker": "background.js"
  },
  "trial_tokens": [""],
  "host_permissions": ["<all_urls>"],
  "web_accessible_resources": [
    {
      "resources": ["assets/trash.png"],
      "matches": ["<all_urls>"]
    }
  ]
}
